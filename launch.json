{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Launch Brave against Vite (localhost:5173)",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true,
      "trace": false,
      "runtimeExecutable": "C:\\Program Files\\BraveSoftware\\Brave-Browser\\Application\\brave.exe"
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Debug Vite Backend (Node.js)",
      "program": "${workspaceFolder}/src/main.tsx",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "C:\\Program Files\\BraveSoftware\\Brave-Browser\\Application\\brave.exe",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
